# Configuração da aplicação (Fator III)
APP_NAME=AI Content Generator
DEBUG=false
PORT=8000
ENVIRONMENT=production

# Banco de dados
DATABASE_URL=postgresql://username:password@localhost:5432/ai_content
DATABASE_POOL_MIN=5
DATABASE_POOL_MAX=20

# Redis
REDIS_URL=redis://localhost:6379/0
REDIS_TTL=3600

# OpenAI API
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_MODEL=gpt-3.5-turbo
OPENAI_MAX_TOKENS=1000

# Autenticação
SECRET_KEY=your-super-secret-key-here
ACCESS_TOKEN_EXPIRE_MINUTES=30
ALGORITHM=HS256

# CORS
ALLOWED_ORIGINS=["http://localhost:3000","https://yourdomain.com"]

# Datadog Configuration (Fator XIV)
DD_API_KEY=your-datadog-api-key-here
DD_APP_KEY=your-datadog-app-key-here
DD_SERVICE=ai-content-generator
DD_ENV=production
DD_VERSION=1.0.0

# Datadog Agent Configuration
DD_AGENT_HOST=localhost
DD_AGENT_PORT=8125
DD_TRACE_AGENT_PORT=8126

# Datadog Features
DD_LOGS_ENABLED=true
DD_TRACE_ENABLED=true
DD_PROFILING_ENABLED=true
DD_RUNTIME_METRICS_ENABLED=true

# Datadog Tags
DD_TAGS=service:ai-content-generator,env:production,team:platform,version:1.0.0
